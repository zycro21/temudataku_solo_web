{
  "compilerOptions": {
    "target": "es2020", // Target JavaScript modern
    "module": "commonjs", // Modul Node.js
    "rootDir": "./src", // Folder source code TypeScript
    "outDir": "./dist", // Output hasil kompilasi
    "strict": true, // Nyalakan pengecekan ketat
    "esModuleInterop": true, // Agar bisa import default module CommonJS
    "forceConsistentCasingInFileNames": true, // Konsistensi nama file
    "skipLibCheck": true, // Skip cek *.d.ts dari lib (lebih cepat)
    "resolveJsonModule": true // Bisa import .json
  },
  "include": ["src"], // Folder yang dikompilasi
  "exclude": ["node_modules", "dist"] // Folder yang diabaikan
}
