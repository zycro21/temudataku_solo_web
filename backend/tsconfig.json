{
  "compilerOptions": {
    "target": "es2020", // Target modern JS
    "module": "ESNext", // Support native import/export
    "moduleResolution": "node", // Resolusi module seperti di Node.js
    "rootDir": "./src", // Folder source code
    "outDir": "./dist", // Folder output hasil kompilasi
    "strict": true, // Aktifkan strict type checking
    "esModuleInterop": true, // Interop CJS ke ESM
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true, // Biar bisa import default dari CJS
    "types": ["node"]
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}
